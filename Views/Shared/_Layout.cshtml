<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClienteTienda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/jumbotron.css" rel="stylesheet" />

</head>
<body style="background-image: url('https://i.pinimg.com/originals/4c/db/5a/4cdb5abc1694aca0236a3dab7f37c62e.png');background-size:cover ">
    <header>
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Tienda de Tatuajes</a>
            
            <div class="collapse navbar-collapse" id="navbarsExample02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio <span class="sr-only">(current)</span></a>
                    </li>

                    @*<li class="nav-item">
                        <a class="nav-link" asp-controller="Aperitivo" asp-action="Index">APERITIVOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Hamburguesas" asp-action="Index">HAMBURGUESAS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Materiales" asp-action="Index">MATERIALES</a>
                    </li>*@

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Tatuajes" asp-action="Index">TATUAJES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Materiales" asp-action="Index">MATERIALES</a>
                    </li>
                </ul>
                <ul class="navbar-nav mr-auto navbar-right">
                    <li><a href="#" hidden><span class="glyphicon glyphicon-user"></span> REGISTRARSE</a></li>
                    <li><a asp-controller="Usuarios" asp-action="LogIn"><span class="glyphicon glyphicon-log-in"></span> LOGIN</a></li>
                </ul>
                @*<form class="form-inline my-2 my-md-0">
            <input class="form-control" type="text" placeholder="Search">
        </form>*@
            </div>
        </nav>
    </header>
    <div class="container" style="background-color: lightgrey; border-radius:35px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ClienteTienda - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
